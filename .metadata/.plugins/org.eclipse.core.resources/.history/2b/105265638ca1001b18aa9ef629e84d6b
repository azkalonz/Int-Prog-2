package com.intprog.controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.intprog.dao.EmployeeDAO;
import com.intprog.model.Employee;

/**
 * Servlet implementation class DTRServlet
 */
@WebServlet("/dtr")
public class DTRServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
	private EmployeeDAO employeeDao = new EmployeeDAO();
    /**
     * @see HttpServlet#HttpServlet()
     */
    public DTRServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		getServletContext().getRequestDispatcher("/WEB-INF/views/dtr.jsp").forward(request, response);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		String dateIn = request.getParameter("date_in");
        String dateOut = request.getParameter("date_out");
        String employeeID = request.getParameter("employeeID");  
        response.sendRedirect(request.getContextPath()+"/dtr?page=dtr"+request.toString());
        
        try {
        	Employee theEmployee = employeeDao.saveDTR(dateIn,dateOut, Integer.parseInt(employeeID));
            response.sendRedirect(request.getContextPath()+"/dtr?page=dtr");
            
        } catch (Exception e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
        }
	}

}
